# dbt Co-Work Environment Variables
# Copy this file to config.env and update with your values

# ===========================
# Gemini API Configuration
# ===========================
GOOGLE_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.5-pro

# Agent-specific models (optional - defaults to GEMINI_MODEL)
# AGENT_INVESTIGATOR_MODEL=gemini-2.5-flash
# AGENT_DIAGNOSTICIAN_MODEL=gemini-2.5-pro
# AGENT_FIX_PROPOSER_MODEL=gemini-2.5-pro

# Agent timeout in seconds
AGENT_TIMEOUT_SECONDS=120

# ===========================
# BigQuery Configuration
# ===========================
BIGQUERY_PROJECT_ID=your_project_id
BIGQUERY_DATASET=elementary
BIGQUERY_CREDENTIALS_PATH=/path/to/service_account.json

# ===========================
# dbt Project Configuration
# ===========================
DBT_PROJECT_PATH=/Users/duc.tran/airbnb-dbt-project/dbt
DBT_PROFILES_DIR=~/.dbt
DBT_PROJECT_NAME=airbnb-analytics
DBT_ADAPTER=BigQuery

# ===========================
# Knowledge Base Path
# ===========================
KNOWLEDGE_BASE_PATH=/Users/duc.tran/dbt-copilot/knowledge_base

# ===========================
# Application Settings
# ===========================
POLLING_INTERVAL_SECONDS=30
USE_MOCK_DATA=true
DEBUG_MODE=false

# ===========================
# Langfuse Observability (Optional)
# ===========================
# Enable Langfuse for tracing and metrics
LANGFUSE_ENABLED=false
LANGFUSE_PUBLIC_KEY=pk-lf-xxx
LANGFUSE_SECRET_KEY=sk-lf-xxx
LANGFUSE_BASE_URL=https://cloud.langfuse.com

# ===========================
# Rate Limiting
# ===========================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_GEMINI_RPM=60
RATE_LIMIT_GEMINI_TPM=1000000
RATE_LIMIT_BIGQUERY_QPM=100
RATE_LIMIT_EMBEDDING_RPM=100

# ===========================
# Caching
# ===========================
CACHE_ENABLED=true
CACHE_EMBEDDING_DIR=.cache/embeddings
CACHE_EMBEDDING_TTL_HOURS=168

